            <option value="WV">West Virginia</option>
            <option value="WI">Wisconsin</option>
            <option value="WY">Wyoming</option>
        </select>
        <br><br>  
      </div>
 
      <div>
        <label for = "city">City:</label>    
        <input type="text" name="city" id="city" maxlength="20" placeholder="City" value={{city}}>  
        <br><br>  
      </div>

      <div class="userFields" hidden disabled>
        <label for = "age" >Age:</label>
        <input type="number" name = "age" min ="13" max = "99" class="input" placeholder="Age" id = "age" value={{age}}>
        <br><br>  
      </div>

      <div class="userFields" hidden disabled>
        <label name="preferences" for="preferences">Preferences</label>
        <select name="preferences[]" id="preferences" multiple size = "5" >
          <option value="none" disabled selected >Select your preferences</option>
          <option value="Entertainment & Media">Entertainment & Media</option>
