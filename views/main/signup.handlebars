  <!-- THIS IS THE SELECTION OF TYPE-->
<link rel="stylesheet" type="text/css" href="/public/css/loginAndSignup.css">

<div class = "centeredTypeSelection">
  <p id="errorClient" hidden></p>
  <label for="userType">I am a: </label>
  <select name="userType" id="userType">
      <option value="none" disabled selected >Select an option</option>
      <option value="User">User</option>
      <option value="Business">Business</option>
  </select>
   <br><br>
</div>

  <!-- THIS IS THE USER SIGN UP FORM. HIDDEN UNTIL TYPE CHOSEN-->
<div class="signupForm">
    <form name = "signupForm" id = "signupForm" method = "Post" action="/signup/user" class="form" hidden>
      <h1 class="title" id="formHeading">User Sign Up</h1>

        <label for = "username">Username:</label>    
            <input type="text" name="username" id="username" maxlength="20" placeholder="Username" value={{username}}>    
        <br><br>    
        <label for = "password">Password:</label>    
            <input type="password" name="password" id="password" maxlength="20" placeholder="Password" value={{password}}>    
        <br><br>
      <div>
        <label class="label" for="firstName">First Name:</label>
        <input name="firstName" id = "firstName" type="text" class="input" maxlength="20" placeholder="First name" value={{firstName}}>
        <br><br>  
      </div>
 
      <div>
        <label class="label" for="lastName">Last Name:</label>
        <input name="lastName" id = "lastName" type="text" class="input" maxlength="20" placeholder="Last name" value="{{lastName}}" >
        <br><br>  
      </div>
 
      <div>
        <label class="label" for="email">Email:</label>
        <input name= "email" id = "email" type="email" class="input" maxlength="20" placeholder="Email" value={{email}} >
        <br><br> 
      </div>
 
      <div class="userFields" hidden disabled>
        <label class="label" for="gender">Gender:</label>
        <select name="gender" id="gender">
            <option value="none"disabled selected>Select your gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Non-Binary">Non-Binary</option>
            <option value="Undisclosed">I prefer not to disclose</option>
        </select>
        <br><br>  
      </div>

 
      <div>
        <label class="label" for="state">State:</label>
        <select name="state" id="state">
