<h1>Login</h1><br>    
<p id="errorClient" hidden></p>  
<div class="login">    
    <form id="loginForm" method="Post" action="/login">    
        <label for="userType">I am a</label>
        <select name="userType" id="userType">
            <option value="none" disabled selected >Select an option</option>
            <option value="User">User</option>
            <option value="Business">Business</option>
        </select>
        <br><br>
        <label for="username"> Username </label>    
            <input type="text" name="username" id="username" maxlength="20" placeholder="Username" value="{{username}}">    
        <br><br>    
        <label for="password"> Password </label>    
            <input type="password" name="password" id="password" maxlength="20" placeholder="Password" value="{{password}}">    
        <br><br>
        <button name="login" id="loginButton" value="Log In">Submit</button>       
    </form>
    <script src="/public/js/validation.js"></script>
    <script src="/public/js/login.js"></script>
</div>