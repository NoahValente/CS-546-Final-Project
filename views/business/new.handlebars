<div>
    <h1>Create a post</h1>
    <p id="errorClient" hidden></p>
    <form id="post" method="post" action = "/business/{{business._id}}/new">
        <label for = "postTitle">Post Title</label>
        <input type="text" id="postTitle" name="postTitle">
        <label for = "postImage">Image URL</label>
        <input type="text" id="postImage" name="postImage">
        <label for = "postText">Post Text</label>
        <input type="text" id="postText" name="postText" class="bigText">
        <button type="submit" id="submit">Submit</button>
        <a href="/business/{{business._id}}" class="small-link">Cancel</a>
    </form>
</div>
<script src="/public/js/validation.js"></script>
<script src="/public/js/post.js"></script>